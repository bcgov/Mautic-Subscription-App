name: prod - update api deployment in prod 

on:
  workflow_dispatch:

jobs:
  tag_for_prod:
    runs-on: ubuntu-latest
    steps:

      - name: Log into OpenShift
        run: |
          oc version
          oc login --token=${{ secrets.OpenShiftToken }} --server=${{ secrets.OpenShiftServerURL }}
      - name: Update imagestream prod
        run: |      
          oc -n de0974-dev tag mautic-subscription-description-api@dev mautic-subscription-api:prod
